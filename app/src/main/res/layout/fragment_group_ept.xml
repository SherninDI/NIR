<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:descendantFocusability="beforeDescendants"
        android:focusableInTouchMode="true"
        tools:context=".GroupEptFragment">


    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:textSize="18sp"
            android:layout_marginBottom="10dp"
            android:id="@+id/text_ampl"
            android:hint="@string/ampl_hint"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/text_step_time"/>

    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:textSize="18sp"
            android:layout_marginBottom="10dp"
            android:id="@+id/text_step_time"
            android:hint="@string/step_time_hint"
            app:layout_constraintTop_toBottomOf="@id/text_ampl"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/text_code"/>

    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:textSize="18sp"
            android:layout_marginBottom="10dp"
            android:id="@+id/text_code"
            android:hint="@string/code_hint"
            app:layout_constraintTop_toBottomOf="@id/text_step_time"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/type_linear"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/type_linear"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            app:layout_constraintTop_toBottomOf="@id/text_code"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/codes">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:textSize="20sp"
                android:id="@+id/text_type"
                android:text="@string/type_text"/>
        <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/spinner_type"/>
    </LinearLayout>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:id="@+id/codes"
            android:text ="@string/codes"
            android:layout_marginBottom="10dp"
            android:gravity="start"
            app:layout_constraintTop_toBottomOf="@id/type_linear"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/search_linear"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/search_linear"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/codes"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/spinner_group">

        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:id="@+id/text_search_code"
                android:hint ="@string/search_text"/>
        <ImageButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/search_24dp"
                android:scaleType="fitCenter"
                android:id="@+id/search_button"
                android:background="@color/white"/>
    </LinearLayout>


    <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spinner_group"
            android:layout_marginBottom="10dp"
            app:layout_constraintTop_toBottomOf="@id/search_linear"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/code_list"/>

    <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/code_list"
            app:layoutManager="android.support.v7.widget.LinearLayoutManager"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/grid3"
            app:layout_constraintTop_toBottomOf="@id/spinner_group"/>
    <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:id="@+id/grid3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/code_list"
            app:layout_constraintBottom_toBottomOf="parent">

        <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/cancel_settings"
                android:text="@string/cancel_button"
                android:layout_column="0"
                android:layout_marginEnd="5dp"
                android:layout_gravity="center|fill"
                android:layout_columnWeight="1"
                android:background="@drawable/button_background"/>
        <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/save_settings"
                android:text="@string/save_button"
                android:layout_column="1"
                android:layout_marginStart="5dp"
                android:layout_gravity="center|fill"
                android:layout_columnWeight="1"
                android:background="@drawable/button_background"/>
    </GridLayout>

</android.support.constraint.ConstraintLayout>